{
  "version": 2,
  "name": "kirklareli-sut-birligi",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/sitedata.js": {
      "includeFiles": "db.json"
    },
    "api/upload.js": {
      "includeFiles": "public/uploads/**"
    }
  }
} 