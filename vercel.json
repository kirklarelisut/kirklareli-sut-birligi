{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/sitedata.js": {
      "includeFiles": "db.json"
    },
    "api/upload.js": {
      "includeFiles": "public/uploads/**"
    }
  }
} 